@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Stylist>;

<div class="well">
  <h1>Stylists</h1>

  @if(@Model.Count == 0)
{
    < h3 > No stylists have been added yet! </ h3 >
  }

@foreach(Stylist stylist in Model)
{
    < li > @Html.ActionLink($"{stylist.Type}", "Details", new { id = stylist.StylistId }) </ li >
  }
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Add new stylist", "Create")</p></center>
  </div>
  <div class="fake-button well">
    <center><p class="link"><a href = "/Clients/Create" > Add a client</a></p></center>
  </div>
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Home", "Index", "Home")</p></center>
  </div>
</div>