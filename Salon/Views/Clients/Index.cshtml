@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Client>

<div class="well">
  <h1>Clients</h1>

  @if (@Model.Count == 0)
  {
    <h3>This stylist has no clients!</h3>
  }

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Type</li>
    }
  </ul>

  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Add new client", "Create")</p></center>
  </div>
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Home", "Index", "Home")</p></center>
  </div>
</div>