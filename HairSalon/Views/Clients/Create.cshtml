@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="well">
  <h4>Add a new client</h4>
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")
    </div>

    <input type="submit" value="Add new client" class="btn btn-block" />
  }
  <div class="fake-button well">
    <center><p class="link">@Html.ActionLink("Show all clients", "Index")</p></center>
  </div>
</div>